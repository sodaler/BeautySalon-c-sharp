@using BeautySalonContracts.ViewModels

@model List<OrderViewModel>
@{
    ViewData["Title"] = "Orders";
}

<div class="text-center">
    <h1 class="display-4">Заказы</h1>
</div>

<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3>
            return;
        }
        <p>
            <a class="btn btn-secondary" asp-action="OrderCreate">Добавить заказа</a>
        </p>
        <table id="listingTable" class="table">
            <thead>
                <tr>
                    <th>
                        Номер
                    </th>
                    <th>
                        Название
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>
                        Дата создания
                    </th>
                    <th>
                        Изменение заказа
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td>
                            <a class="btn btn-secondary" asp-action="OrderUpdate" asp-route-orderId="@item.Id" asp-route-orderName="@item.OrderName" 
                            asp-route-price="@item.Price"
                            asp-route-createDate="@item.CreateDate">Изменить</a>

                            <a class="btn btn-secondary" asp-action="OrderDelete" asp-route-orderId="@item.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>              
        </table>
    }
</div>