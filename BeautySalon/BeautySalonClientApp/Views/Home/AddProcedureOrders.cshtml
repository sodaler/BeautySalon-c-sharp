@{
    ViewData["Title"] = "Create OrderProcedure";
}

<div class="text-center">
    <h1 class="display-4">Привязка заказов к процедуре</h1>
</div>

<form method="post">
    <div class="row">
        <div class="col-4">Процедура:</div>
        <div class="col-8">
            <select id="procedureId" name="procedureId" class="form-control" asp-items="@(new SelectList(@ViewBag.Procedures,"Id", "ProcedureName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Заказы:</div>
        <div class="col-8">
            <select id="ordersId" name="ordersId" multiple="multiple" class="form-control" asp-items="@(new SelectList(@ViewBag.Orders,"Id", "OrderName"))"></select>
        </div>
    </div>
     <div class="row">
        <div class="col-4"></div>
        <div class="col-8">
            <input type="submit" value="Привязать" class="btn btn-secondary"/>
            <a type="button" asp-action="Order" class="btn btn-secondary">Отмена</a>
        </div>
    </div>
</form>