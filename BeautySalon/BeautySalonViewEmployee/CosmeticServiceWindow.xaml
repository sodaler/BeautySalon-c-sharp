<Window x:Class="BeautySalonViewEmployee.CosmeticServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySalonViewEmployee"
        mc:Ignorable="d"
        
        FontFamily="Robotto"
        Background="AntiqueWhite"
        Title="Выбор услуги" Height="160" Width="350">
    <Grid Margin="0,0,0,-1">
        <Label Content="Услуга" HorizontalAlignment="Center" Margin="0,4,0,0" VerticalAlignment="Top" FontSize="18"/>
        <ComboBox x:Name="comboBoxServices" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="194" Background="LightCyan"/>
        <Button x:Name="buttonSave" Content="Сохранить" HorizontalAlignment="Left" Margin="47,89,0,0" VerticalAlignment="Top" Width="78" Height="23" Click="buttonSave_Click" Background="LightCyan"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="222,89,0,0" VerticalAlignment="Top" Width="78" Height="23" Click="buttonCancel_Click" Background="LightCyan"/>

    </Grid>
</Window>
