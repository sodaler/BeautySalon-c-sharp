<Window x:Class="BeautySalonViewEmployee.WindowStatistic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySalonViewEmployee"
        mc:Ignorable="d"
        xmlns:DVC="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
        Title="WindowStatistic" Loaded="Window_Loaded" Height="450" Width="800">
    <Grid>
        <DVC:Chart x:Name="VisitsDistribution" Margin="5,5">
            <DVC:PieSeries IndependentValueBinding="{Binding Item1}" DependentValueBinding="{Binding Item2}" AnimationSequence="LastToFirst"/>
        </DVC:Chart>
    </Grid>
</Window>
